<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cis.ramrodcs.tamagotchi" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PetViewer"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PetStatViewer"
            android:label="@string/title_activity_pet_stat_viewer"
            android:parentActivityName="cis.ramrodcs.tamagotchi.PetViewer" >
        </activity>
        <activity
            android:name=".MenuViewer"
            android:label="@string/title_activity_menu_viewer"
            android:parentActivityName="cis.ramrodcs.tamagotchi.PetViewer" >
        </activity>
    </application>

</manifest>
